<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_invite_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/invite_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_invite_status"
        android:layout_toEndOf="@+id/img_invite_status"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"/>

    <TextView
        android:id="@+id/invite_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_name"
        android:layout_toRightOf="@+id/img_invite_status"
        android:layout_toEndOf="@+id/img_invite_status"
        android:text="Date"/>


</RelativeLayout>